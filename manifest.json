{
  "manifest_version": 3,
  "name": "Truth Lens - AI Fact Checker",
  "version": "1.0",
  "description": "Verify facts on any webpage or YouTube video using AI.",
  "permissions": [
    "sidePanel",
    "storage",
    "contextMenus",
    "tabs",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "background": {
    "service_worker": "js/background.js",
    "type": "module"
  },
  "side_panel": {
    "default_path": "html/index.html"
  },
  "action": {
    "default_title": "Open Truth Lens",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/content/page.js",
        "js/content/transcription.js",
        "js/content/content.js"
      ]
    }
  ]
}